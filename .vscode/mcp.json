{
  "servers": {
    "memory": {
      "command": "docker",
      "args": ["run", "-i", "-v", "claude-memory:/app/dist", "mcp/memory"]
    },
    "sequential-thinking": {
      "command": "docker",
      "args": ["run", "-i", "mcp/sequentialthinking"]
    },
    "filesystem": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--mount",
        "type=bind,src=${workspaceFolder},dst=/projects/workspace",
        "mcp/filesystem",
        "/projects"
      ]
    },

    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest"]
    },
    "terraform": {
      "type": "stdio",
      "command": "docker",
      "args": ["run", "-i", "--rm", "hashicorp/terraform-mcp-server:latest"]
    },
    "azure": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "node:20-bookworm",
        "sh",
        "-c",
        "npx -y @azure/mcp@latest server start"
      ]
    },
    "microsoft-docs": {
      "type": "http",
      "url": "https://learn.microsoft.com/api/mcp"
    },
    "markitdown": {
      "type": "stdio",
      "command": "uvx",
      "args": ["markitdown-mcp"]
    }
  },
  "inputs": [
    {
      "type": "promptString",
      "id": "perplexity-api-key",
      "description": "Perplexity API Key",
      "password": true
    }
  ]
}
